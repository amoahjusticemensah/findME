<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Courses" />
    </android.support.design.widget.TabLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner1"
        android:text="Favorite Subject"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="0dp"
        android:entries="@array/course_array" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:text="Select any Two Subjects Based on Priority  of Interest"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/course_array"
        android:padding="0dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="126dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/course_array"
        android:padding="0dp" />


    <Button
        android:id="@+id/CourseButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="Course"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="208dp"
        android:fontFamily="sans-serif"
        android:text="First Subject"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner3"
        android:layout_marginTop="-179dp"
        android:fontFamily="sans-serif"
        android:text="Second Subject"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/courseLayout"
        android:layout_width="282dp"
        android:layout_height="256dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spinner1"
        android:layout_marginEnd="26dp"
        android:background="@android:color/holo_green_light"
        android:orientation="vertical"
        android:visibility="invisible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/courseList"
            android:layout_width="282dp"
            android:layout_height="187dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:text="These are suggested courses for you:"
            android:singleLine="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gobackButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:onClick="goback"
            android:text="Back"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>